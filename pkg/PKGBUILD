# Maintainer: Eivind Uggedal <eivind@uggedal.com>

pkgname=uggedal.com
pkgver=1.0
pkgrel=1
pkgdesc='Static files for uggedal.com.'
arch=('any')
url='http://uggedal.com'
license=('custom')
depends=('nginx')
source=()
md5sums=()

build() {
  local http_root="$pkgdir/srv/http"
  local http_dest="$http_root/$pkgname"

  install -d $http_dest
  install ../../src/*.html -t $http_dest
  install ../../src/*.ico -t $http_dest
  install ../../src/*.txt -t $http_dest
  install ../../src/*.png -t $http_dest
  install ../../src/*.pdf -t $http_dest

  # Preserve original /srv/http mode
  chmod 0750 $http_root

  # The http user should own all files and directories
  chown -R http: $http_dest
}
